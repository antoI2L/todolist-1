{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tags list</h1>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Tag</th>
            <th>Tasks count</th>
        </tr>
    {% for tag in tags %}
        <tr>
            <td>
                <a href="{{ path('list_task_tag', {tag: tag.id}) }}"><span class="glyphicon glyphicon-tag"></span> {{ tag.title }}
                </a>
            </td>
            <td>
                {{ tag.task|length }} Task(s)
            </td>
        </tr>
    {% else %}
        <tr><td colspan="2">{% trans %}tag.empty_list{% endtrans %}</td></tr>
    {% endfor %}
    </table>
{% endblock %}